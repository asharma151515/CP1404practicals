BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            hint_text: 'Enter miles'
            input_filter: 'float'  # Only allow float input

        BoxLayout:
            orientation: 'vertical'

            Button:
                text: 'Up'
                on_press: app.increment()

            Button:
                text: 'Down'
                on_press: app.decrement()

    Button:
        text: 'Convert'
        on_press: app.convert()

    Label:
        text: app.result  # Bind the label to the result property
        font_size: 24

    Button:
        text: 'Clear'
        on_press: app.clear_input()